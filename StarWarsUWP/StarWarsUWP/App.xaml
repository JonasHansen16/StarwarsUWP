<Application
    x:Class="StarWarsUWP.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StarWarsUWP.App"
    xmlns:views="using:StarWarsUWP.App.Views"
    xmlns:converters="using:StarWarsUWP.App.Converters"
    xmlns:rating="clr-namespace:BratchedTools.RatingControl"
    RequestedTheme="Light">

    <Application.Resources>
        <converters:PosterConverter x:Key="posterConverter" />
        <converters:DateConverter x:Key="dateConverter" />
        <converters:RomanConverter x:Key="romanConverter" />
        <local:ViewModelLocator x:Key="viewModelLocator" />
    </Application.Resources>

</Application>
