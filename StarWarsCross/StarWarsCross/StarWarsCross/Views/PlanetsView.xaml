<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            
             x:Class="StarWarsCross.Views.PlanetsView"
             BindingContext="{Binding Source={StaticResource ViewModelLocator}, Path=PlanetsViewModel }">
 
<ListView  ItemsSource="{Binding Planets, Mode=TwoWay">
  <ListView.ItemTemplate>
    <DataTemplate>
      <ViewCell>
        
     
      
  <StackLayout>
    <Label x:Name="MyLabel" Text="Planet" FontSize="Medium"/>
    <Label Text="Name"/>
  <Label Text ="{Binding Name}"/>
  <Label Text="Climate"/>
  <Label Text="{Binding Climate}"/>
  <Label Text="Gravity"/>
  <Label Text="{Binding Gravity}"/>
  <Label Text="Terrain"/>
  <Label Text="{Binding Terrain"/>
  </StackLayout>
      
   </ViewCell>


        </DataTemplate>
      </ListView.ItemTemplate>
  </ListView>
</ContentPage>


  

